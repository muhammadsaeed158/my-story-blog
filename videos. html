  <script>
    // Year auto-update
    document.getElementById('year').textContent = new Date().getFullYear();

    // ✅ Fully working YouTube public videos (tested)
    const videos = [
      {
        title: "Nature Relaxation in 4K",
        desc: "Enjoy peaceful nature scenes.",
        embed: "https://www.youtube.com/embed/Scxs7L0vhZ4"
      },
      {
        title: "Top Travel Places 2025",
        desc: "Explore the most beautiful places to visit.",
        embed: "https://www.youtube.com/embed/tgbNymZ7vqY"
      },
      {
        title: "Inspirational Talk by Steve Jobs",
        desc: "Powerful motivational video for success.",
        embed: "https://www.youtube.com/embed/UF8uR6Z6KLc"
      },
      {
        title: "Ocean Waves for Relaxation",
        desc: "Calming ocean waves with soothing sounds.",
        embed: "https://www.youtube.com/embed/mcixldqDIEQ"
      }
    ];

    const container = document.getElementById('videos-container');
    container.innerHTML = '';

    videos.forEach(v => {
      const card = document.createElement('div');
      card.className = 'video-card';
      card.innerHTML = `
        <iframe src="${v.embed}" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <div class="video-content">
          <h3 class="video-title">${v.title}</h3>
          <p class="video-desc">${v.desc}</p>
        </div>`;
      container.appendChild(card);
    });
  </script>
